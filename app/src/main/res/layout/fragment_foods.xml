<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header/Profile -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#00695C"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Today (Tanggal Input) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginEnd="16dp" />

            <EditText
                android:id="@+id/edtDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="DD"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center"
                android:background="@drawable/edittext_bg"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="MM"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_bg"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YYYY"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_bg"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/tombolkalender"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/calendar"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Glucose Index Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glucose Index:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:textColor="#333333" />

        <!-- ======= MEAL SECTIONS ======= -->

        <!-- Breakfast -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textStyle="bold"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/edtBreakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter breakfast info"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtHasilBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glukosa: 0"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Lunch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:textStyle="bold"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/edtLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter lunch info"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtHasilLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glukosa: 0"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Dinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:textStyle="bold"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/edtDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter dinner info"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtHasilDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glukosa: 0"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Snack -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snack"
            android:textStyle="bold"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/edtSnack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter snack info"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtHasilSnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glukosa: 0"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:backgroundTint="#00695C"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Total Glukosa -->
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Glukosa: 0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#00796B"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Recommendation Button -->
        <Button
            android:id="@+id/btnRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECOMMENDATION"
            android:backgroundTint="#FFD600"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>

