<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FAF8"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Card: Profile + Welcome + Scan Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_header_card"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <!-- Profile Picture -->
            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:padding="2dp" />

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white"
                    android:padding="2dp"
                    android:src="@drawable/add" />
            </FrameLayout>

            <!-- Welcome and Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00796b" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HANNAH MORALES"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#003320" />
            </LinearLayout>

            <!-- Scan Icon -->
            <ImageView
                android:id="@+id/scan_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/scan"
                android:contentDescription="Scan"
                android:padding="4dp" />
        </LinearLayout>


        <!-- Personal Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_info_box"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Title inside the box -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Name Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Hannah Morales"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Email Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="8dp"
                android:textColor="#FFFFFF" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="hannah@email.com"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Age and Sex -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <!-- Age -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textColor="#FFFFFF" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="23"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Sex -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sex"
                        android:textColor="#FFFFFF" />
                    <Spinner
                        android:id="@+id/spinner_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:padding="13dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <!-- Health Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_info_box"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Title inside the box -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Information"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Diabetes Type -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diabetes Type"
                android:textColor="#FFFFFF" />
            <Spinner
                android:id="@+id/spinner_diabetes"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="12dp"
                android:background="@drawable/edittext_background" />

            <!-- Insulin Therapy + Target Glucose -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <!-- Insulin Therapy -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insulin Therapy"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/edittext_background"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textColor="#000000"
                            android:paddingLeft="20dp"/>

                        <Switch
                            android:id="@+id/switch_insulin"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="30dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Target Glucose -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Glucose"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="80â€“130"
                        android:background="@drawable/edittext_background"
                        android:padding="14dp"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
